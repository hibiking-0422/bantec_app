
<!DOCTYPE html>
<html>
  <head>
    <title>RailsTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
 
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  </head>
 
  <body>
    <header>
        <nav class="global-nav">
          <ul>
           <div class="image"><%= link_to image_tag('bantec.png', :size =>'85x75'),root_path%></div>
           <% if user_signed_in? %>
            <li class="nav-item" ><%= link_to 'プロジェクト一覧',projects_url %></li>
            <li class="nav-item" ><%= link_to '集計',searches_url %></li>
            <li class="nav-item" ><%= link_to '検索' %></li>

              <div class="logout"><li class="nav-item" ><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li></div>
            
        <% else %>
          <div class="logout">
            <li class="nav-item" ><%= link_to '新規登録', new_user_registration_path %></li>
            <li class="nav-item" ><%= link_to 'ログイン', new_user_session_path %></li>
          </div>
            <% end %>
          </ul>
        </nav>
    </header>
 
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
 
    <%= yield %>
 
  </body>
</html>
