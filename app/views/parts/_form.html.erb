<%= form_for @part do |f| %>
    <%= f.label :part_name,"部品名" %>
    <%= f.text_field :part_name %><br>

    <%= f.label :unit_price,"単価" %>
    <%= f.number_field :unit_price %>

    <%= f.label :volume,"数量" %>
    <%= f.number_field :volume %>

    <%= f.label :maker,"メーカー" %>
    <%= f.text_field :maker %><br>

    <%= f.label :vender,"仕入先" %>
    <%= f.text_field :vender %><br>

    <%= f.label :day,"日付" %>
    <%= f.date_select :day %>

    <%= f.hidden_field :project_id, :value => params[:project_id] %>

    <% if @part.id.nil? %>
        <%= f.submit "作成" %>
    <% else %>
        <%= f.submit "修正" %>
    <% end %>
<% end %>