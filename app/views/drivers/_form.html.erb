<div class="center">
<%= form_for @driver do |f| %>
<table  align="center" class="table-form">
    <tr>
        <th><%= f.label :driver_cost,"交通費" %></th><td><%= f.number_field :driver_cost %></td>
    </tr>
    <tr>
        <th><%= f.label :day,"日付" %></th><td><%= f.date_select :day %></td>
    </tr>
</table>
<br>
    <%= f.hidden_field :project_id, :value => params[:project_id] %>
    <% if @driver.id.nil? %>
        <%= f.submit "追加" %>
    <% else %>
        <%= f.submit "修正" %>
    <% end %>
<% end %>
</div>